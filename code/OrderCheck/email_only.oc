CodeDef email_only OrderCheck 1
CodeDef email_only Routine <<EOR
sub {
	my($ref, $var, $val) = @_;
	if($val and $val =~ /^[\040-\176]+\@[-A-Za-z0-9.]+\.[A-Za-z]+$/) {
		return (1, $var, '');
	}
	else {
		return (undef, $var,
			errmsg( "'%s' not an email address", $val )
		);
	}
}
EOR