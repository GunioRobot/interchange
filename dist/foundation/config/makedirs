#!/bin/sh

if [ "x`whoami`" = xroot ]
then
	ICUSER=`cat __MVC_VENDROOT__/_uid`
fi

if test "x__MVC_PERMTYPE__" = x -o "x__MVC_PERMTYPE__" = xM -o "x__MVC_PERMTYPE__" = xG
then
	DMODE=2770
else
	DMODE=700
fi

# Link the image directory always
ln -s __MVC_IMAGEDIR__ __MVC_CATROOT__

# Make log directories to store logs.
if test -n "__MVC_LOGDIR__"
then 
	LOGDIR='__MVC_LOGDIR__'
	mkdir -p     $LOGDIR/logs
	mkdir -p     $LOGDIR/orders
	touch        $LOGDIR/error.log
	ln    -s     $LOGDIR/error.log __MVC_CATROOT__
	ln    -s     $LOGDIR/logs      __MVC_CATROOT__
	ln    -s     $LOGDIR/orders    __MVC_CATROOT__
	chmod $DMODE $LOGDIR/logs
	chmod $DMODE $LOGDIR/orders
	if test -n "$ICUSER"
	then
		chown $ICUSER.$ICUSER $LOGDIR/error.log
	fi
else
	LOGDIR='__MVC_CATROOT__'
	mkdir -p     $LOGDIR/orders
	mkdir -p     $LOGDIR/logs
	chmod $DMODE $LOGDIR/logs
	chmod $DMODE $LOGDIR/orders
fi

# Make cache directories to store tmps.
if test -n "__MVC_CACHEDIR__" 
then 
	CACHEDIR='__MVC_CACHEDIR__'
	mkdir -p $CACHEDIR/session
	ln    -s $CACHEDIR/session __MVC_CATROOT__
	mkdir -p $CACHEDIR/tmp
	ln    -s $CACHEDIR/tmp     __MVC_CATROOT__
else
	CACHEDIR='__MVC_CATROOT__'
	mkdir -p     $CACHEDIR/session
	mkdir -p     $CACHEDIR/tmp
	chmod $DMODE $CACHEDIR/session
	chmod $DMODE $CACHEDIR/tmp
fi

# Fix directory ownership if running as root
if test -n "$ICUSER"
then
	chown $ICUSER.$ICUSER $LOGDIR/logs $LOGDIR/orders $CACHEDIR/session $CACHEDIR/tmp
fi

# Link in a default style
if test -n "__MVC_STYLE__"
then
	ln -s __MVC_STYLE__ __MVC_CATROOT__/templates/default
fi

